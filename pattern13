#include<bits/stdc++.h>
using namespace std;

int main(){
            //           5
            //         4 4
            //       3 3 3
            //     2 2 2 2
            //   1 1 1 1 1
        int n,c;
        cin>>n;
        for(int i=n;i>0;i--){
            for(int j=1;j<=n;j++){
                if(j!=i&&j<i){
                    cout<<" ";
                }
                else{
                    cout<<i;
                }

            }
            cout<<endl;

        }
    }
