#include<bits/stdc++.h>
using namespace std;
int main(){
//     1
//    2 2
//   3   3
//  4     4
// 5 5 5 5 5 

    int n,r;
    cin>>n;
    r=1;
    for(int i=1;i<n;i++){
    if(i<n){
    for(int j=0;j<n-i;j++){
        cout<<" ";
    }
    }
    cout<<i;
    for(int k=2;k<r;k++){
      
        cout<<" ";
        
    }
     if(r>1){
            cout<<i;
        }
   
    r=r+2;
    cout<<endl;
    }
    for(int q=1;q<=n;q++){
            cout<<n<<" ";
    }
    
    return 0;
}
