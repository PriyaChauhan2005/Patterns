#include<bits/stdc++.h>
using namespace std;

int main(){
            //           *
            //         * * 
            //       * * *
            //     * * * * 
            //   * * * * *
        int n,c;
        cin>>n;
        for(int i=n;i>0;i--){
            for(int j=1;j<=n;j++){
                if(j!=i&&j<i){
                    cout<<" ";
                }
                else{
                    cout<<"*";
                }

            }
            cout<<endl;

        }
    }
