(* 
    A
   ABA
  ABCBA
 ABCDCBA
ABCDEDCBA

 *)


#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    void pattern17(int n) {
        for(int i=1; i<=n; i++) {
            
            for(int j=1; j<=n-i; j++) {
                cout << " ";
            }

            
            char ch = 'A';
            for(int j=1; j<=i; j++) {
                cout << ch;
                ch++;
            }

            
            ch -= 2; 
            for(int j=1; j<i; j++) {
                cout << ch;
                ch--;
            }

            cout << endl;
        }
    }
   
};

int main() {
    int N = 5;
    
    //Create an instance of Solution class
    Solution sol;
    
    sol.pattern17(N);
    
    return 0;
}
