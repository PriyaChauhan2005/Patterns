#include<bits/stdc++.h>
using namespace std;
int main(){
    //   * * * * * * * * * * * * * * * * * * * * * * * * * 
    //   *       * *       * *       * *       * *       * 
    //   *       * *       * *       * *       * *       * 
    //   *       * *       * *       * *       * *       * 
    //   * * * * * * * * * * * * * * * * * * * * * * * * * 
 
    int n;
     cout<<"Enter the value n:";
    cin>>n;
    cout<<endl;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=n;j++){
           
            if(i==1||i==n){
                cout<<"* ";
                for( int k=2;k<=n;k++){
                    cout<<"* ";
                }
            }
            else{
                 cout<<"* ";
                for(int k=2;k<n;k++){
                    cout<<"  ";
                }
                cout<<"* ";
            }
        }
        cout<<endl;
    }
    return 0;
}
