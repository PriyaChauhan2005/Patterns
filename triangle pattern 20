#include<bits/stdc++.h>
using namespace std;
int main(){
//     *
//    * *
//   *   *
//  *     *
// * * * * * 

    int n,r;
    cin>>n;
    r=1;
    for(int i=1;i<n;i++){
    if(i<n){
    for(int j=0;j<n-i;j++){
        cout<<" ";
    }
    }
    cout<<"*";
    for(int k=2;k<r;k++){
      
        cout<<" ";
        
    }
     if(r>1){
            cout<<"*";
        }
   
    r=r+2;
    cout<<endl;
    }
    for(int q=1;q<=n;q++){
            cout<<"* ";
    }
    
    return 0;
}
